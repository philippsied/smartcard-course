<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<VBox alignment="CENTER" styleClass="userTerminal" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controller.CashpointController">
   <children>
      <GridPane hgap="20.0" maxHeight="100.0" vgap="20.0">
         <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button mnemonicParsing="false" onAction="#handleChargeAction" text="Aufladen" GridPane.rowIndex="1" />
            <Button mnemonicParsing="false" onAction="#handleRequestAction" text="Abfragen" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="displayMoneyField" maxWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="1" />
            <ComboBox fx:id="chooseMoneyCombo" prefWidth="150.0" />
         </children>
      </GridPane>
   </children>
</VBox>
